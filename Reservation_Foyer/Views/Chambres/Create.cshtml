@model Reservation_Foyer.Models.Chambre

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="text-center mt-6 mb-4">Create New Chambre</h1>
    <hr class="my-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Chambre Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Bloc" class="control-label">Bloc:</label>
                    <input asp-for="Bloc" class="form-control" />
                    <span asp-validation-for="Bloc" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Discription" class="control-label">Description:</label>
                    <textarea asp-for="Discription" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Discription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Capacite" class="control-label">Capacité:</label>
                    <input asp-for="Capacite" class="form-control" type="number" />
                    <span asp-validation-for="Capacite" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Foyer" class="control-label">Associated Foyer:</label>
                    <select asp-for="FoyerId" class="form-control" asp-items="ViewBag.Foyers"></select>
                    <span asp-validation-for="Foyer" class="text-danger"></span>
                </div>
                <br />
                <br />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Create Chambre</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
