@model Reservation_Foyer.Models.User

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="text-center">User Details</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                <dt class="col-sm-4">Password:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>
                <dt class="col-sm-4">Address:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Adress)</dd>
               
            </dl>
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Phone:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>
                <dt class="col-sm-4">CIN:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cin)</dd>
                <dt class="col-sm-4">Sex:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Sex)</dd>
                <dt class="col-sm-4">Role:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
            </dl>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
