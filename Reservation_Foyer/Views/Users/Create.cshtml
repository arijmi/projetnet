@model Reservation_Foyer.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create User</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email:</label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Password:</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adress" class="control-label">Address:</label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label">Phone:</label>
                <input asp-for="Phone" class="form-control" type="tel" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cin" class="control-label">CIN:</label>
                <input asp-for="Cin" class="form-control" />
                <span asp-validation-for="Cin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sex" class="control-label">Sex:</label>
                <select asp-for="Sex" class="form-control">
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>

            <div class="form-group">
               
                <input asp-for="Role" class="form-control" value="0" readonly type="hidden" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UniversiteId" class="control-label">University:</label>
                <select asp-for="UniversiteId" class="form-control" asp-items="ViewBag.Universites"></select>
                <span asp-validation-for="UniversiteId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ChambreId" class="control-label">Room:</label>
                <select asp-for="ChambreId" class="form-control" asp-items="ViewBag.Chambres"></select>
                <span asp-validation-for="ChambreId" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
